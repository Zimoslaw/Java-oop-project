<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" prefHeight="500.0" prefWidth="300.0"
          fx:controller="kingdoms.kingdoms.AddRulerViewController"><padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Dodaj nowego władcę" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"><font><Font name="Arial" size="18" /></font></Label>
    <Label text="Imię" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Wiek" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="age" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Renoma" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="prestige" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Początkowe roszczenie" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="claim" GridPane.columnIndex="1" GridPane.rowIndex="4">

    </ComboBox>
    <Button text="Dodaj" onAction="#Submit" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextArea fx:id="infos" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" editable="false"/>
</GridPane>
